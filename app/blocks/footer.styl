// Футер
.site-footer
  background-color #202020

.footer__nav
  padding 20px 0
  .active
    a
      border-color transparent !important
  .nav__item:hover
    a
      border-color transparent !important

.footer__separ
  width 100%
  height 0
  border-bottom 2px solid #fff

.footer__bottom
  width 100%
  padding 20px 0 40px
  text-align center

  // Остались вопросы
.any-questions
  background-image url(../images/callback-bg.jpg)
  background-size cover
  background-position center
  padding 30px 0

.any-questions__header
  text-align center
  font-size 24px
  font-weight bold
  color #fff
  padding-bottom 10px
.any-questions__button
  margin auto
  display block
  color #fff
  font-size 18px
  font-weight bold
  background-color navColorGreen
  border 2px solid navColorGreen
  border-radius 10px
  padding 10px 30px
  trs2()
.any-questions__button:hover
  background-color #fff
  color navColorGreen

  // /Остались вопросы

  // Обратная связь
.footer__form
  background-image url(../images/footer-bg.jpg)
  background-size cover
  background-position center
  padding 40px 0

.form
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction column
  align-items center
  width 100%
  max-width 310px

.form__input
.form__textarea
  border none
  border-radius 7px
  padding 15px 20px
  margin-bottom 7px
  font-size 14px
  font-style italic
  color navColorGreen
  width 100%

.form__input::placeholder
.form__textarea::placeholder
  color navColorGreen
  opacity .5

.form__textarea
  height 130px

.form__submit
  border 2px solid #0e8c85
  border-radius 5px
  color #fff
  background-color #0e8c85
  font-size 18px
  padding 8px 3px
  width 100%
  max-width 150px
  margin-top 3px
  cursor pointer
  trs2()
.form__submit:hover
  color #0e8c85
  background-color #fff
  border 2px solid #0e8c85
  // /Обратная связь


// /Футер
