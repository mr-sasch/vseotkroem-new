// Шапка Лэндинга
.header-form
  border 1px solid navColorGreen
  border-radius 10px
  padding 10px 20px
  background-color grey

.header-form__header
  margin-bottom 10px

.header-form__input
  width 100%
  margin-bottom 7px
  border-radius 5px
  padding 4px 8px
  border 1px solid
  font-size 14px

.header-form__submit
  width 100%
  border none
  border-radius 5px
  padding 7px 0
  color #fff
  background red
  cursor pointer

.header-form__footer
  margin-top 10px

.header-main-utp__button.header-main-utp__button_sp
  margin-top 20px

.header-main-utp.header-main-utp_sp
  text-align left
  display flex
  flex-direction column
  justify-content center
  height 100%

.header-top-p
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction column
  justify-content center
  height 100%
  font-style italic

.header-phone
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction column
  justify-content center
  height 100%
.header-phone__header
  text-align right
  font-weight bold
  color red
  font-size 22px
.header-phone__number
  color #fff
  text-align right
  font-size 33px
// /Шапка Лэндинга
