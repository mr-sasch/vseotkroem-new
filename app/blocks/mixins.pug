//- Навигационное меню
mixin navMenu()
  //- Нав меню основное
  ul.nav.d-flex.flex-column.flex-sm-row
    mixin navItem(href, title, isActive)
      li.nav__item(class= isActive)
        a.nav__item-a(href= href)= title
    +navItem('main.html', 'Главная')
    //- +navItem('services.html', 'Услуги')
    +navItem('prices.html', 'Цены')
    +navItem('contacts.html', 'Контакты')
  //- /Нав меню основное

  //- Заголовок зачеркнутый. Центр
mixin titleStrokeCenter(ttl)
  .title-stroke-center
    h1.title-stroke-center__h1= ttl  
  //- /Заголовок зачеркнутый. Центр

  //- Заголовок зачеркнутый. Справа
mixin titleStrokeRight(ttl)
  .title-stroke-right
    h1.title-stroke-right__h1= ttl  
  //- /Заголовок зачеркнутый. Справа

//- /Навигационное меню
  
mixin tabs()
  .d-flex.justify-content-center
    section.tabs
      ul.tabs-btns
        mixin bynItem(txt, isActive)
          li.tabs-btns__item(class= isActive)= txt
        +bynItem('Вскрытие дверей', 'active')
        +bynItem('Вскрытие автомобилей')
        +bynItem('Вскрытие сейфов')
        +bynItem('Замена и ремонт замков')
      //- Табы услуг
      section.tabs-content
        ul.tabs-content__tab.active
          li.tabs-content__tab-item
            a.tabs-content__tab-item-a(href='services-flats.html') Квартиры
          li.tabs-content__tab-item 
            a.tabs-content__tab-item-a(href='services-offices.html') Офисы и склады
          li.tabs-content__tab-item 
            a.tabs-content__tab-item-a(href='services-garages.html') Коттеджи и гаражи
        ul.tabs-content__tab
          li.tabs-content__tab-item 
            a.tabs-content__tab-item-a(href='services-auto-doors.html') Открытие дверей авто всех марок
          li.tabs-content__tab-item 
            a.tabs-content__tab-item-a(href='services-auto-baggage.html') Открытие багажников и капотов
          li.tabs-content__tab-item 
            a.tabs-content__tab-item-a(href='services-auto-akb.html') Зарядка АКБ и запуск авто
        ul.tabs-content__tab
          li.tabs-content__tab-item 
            a.tabs-content__tab-item-a(href='services-safe-unlock.html') Вскрытие любых сейфов
          li.tabs-content__tab-item 
            a.tabs-content__tab-item-a(href='services-safe-repair.html') Замена и ремонт сейфовых замков
          li.tabs-content__tab-item 
            a.tabs-content__tab-item-a(href='services-safe-keys.html') Изготовление ключей для сейфов
