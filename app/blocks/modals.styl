// Вызвать мастера
.call-master-form
  display -webkit-flex
  display -ms-flex
  display flex
  flex-direction column

.call-master-form__input
.call-master-form__textarea
  border-radius 5px
  padding 10px
  border-radius 7px
  padding 15px 20px
  margin-bottom 7px
  font-size 14px
  font-style italic
  color #15c394
  border 1px solid grey
.call-master-form__input::placeholder
.call-master-form__textarea::placeholder
  font-size 14px
  font-style italic
  color #15c394

.call-master-form__input
  margin-bottom 5px

.call-master-form__submit
  text-align center
  .utp-button
    display inline-block
    margin-top 20px
    margin-bottom 10px

// Заказать звонок
.call-back-form__submit
  text-align center
  .any-questions__button
    display inline-block
    margin-top 20px
    margin-bottom 10px

  // Bootstrap
.modal-content
  background-color #f3f3f3
  border 2px solid navColorGreen
  border-radius 7px
.modal-header
  text-align center
  justify-content center
.modal-header
  .close
    position absolute
    right 15px
    top 10px

// Мастер уже рядом
#masterAlmostHere
  .modal-title
    text-align left
    color #fff
    font-size 16px
    // font-style italic
  .masterAlmostHere__span
    margin-top 10px
  .modal-header
    justify-content start
    border none
    padding-bottom 0
#masterAlmostHere.modal.fade
  .modal-dialog
    -webkit-transform: translate(0,25%);
    transform: translate(0,25%);
  .header-form
    -webkit-transform scale(0.8)
    transform scale(0.8)
    max-width 380px
    font-size 15px
    color #fff
    opacity 0
    background-color #5f5f5f
    border-color #62b19c
    trs2()
  .modal-content
    display -webkit-flex
    display -ms-flex
    display flex
    align-items center
    flex-direction column
    border none
    background none
#masterAlmostHere.modal.show
  .header-form
    -webkit-transform scale(1)
    transform scale(1)
    opacity 1
  .modal-dialog
    -webkit-transform: translate(0,25%);
    transform: translate(0,25%);


