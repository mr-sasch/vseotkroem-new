// Главная страница
.header-main
  background-image url(../images/main-header.jpg)
  background-size cover
  background-position center

.seo-text
  margin 30px 0 50px

.seo-text__img
  float right
  shape-outside url(../images/main-article-key.png)
  width 200px

  // Почему мы?
.why-us
  padding 50px 0
  background-image url(../images/bg-dotted.jpg)

.why-us__item
  position relative

.why-us-item__row
  margin 30px 0

.why-us__item-number
  width 60px
  height 60px
  border 2px solid
  border-radius 50%
  display -webkit-flex
  display -ms-flex
  display flex
  justify-content center
  align-items center
  font-size 30px
  font-weight bold
  background-color #ededed
  z-index 20

.why-us__item-article-p
  font-size 18px
  line-height 1.4

.why-us__item-article-header-h1
  font-size 24px
  font-weight bold

  // Линии
.line
  position absolute
  // border 1px solid
  z-index 10
.line__stroke
  position absolute

  // /Линии

  // /Почему мы?


  // Ячейки с ценами
.main-prices
  margin 30px 0 30px

.main-prices-item_row
  padding-top 20px

.main-prices-item
  text-align center
  padding-bottom 30px
  padding 15px 10px 30px 10px
  border 2px solid
  border-radius 10px
  position relative
  margin-bottom 40px
  box-shadow 0px -3px 14px grey
  trs2()

.main-prices-item:hover
  // box-shadow 0px -2px 3px 0px grey
  box-shadow none
  top 1px

.main-prices-item__header
  font-size 14px
  color grey
  text-transform uppercase

.main-prices-item__img
  max-width 70%

.main-prices-item__footer
  font-size 24px
  font-weight bold

.main-prices-item__button-wrapper
  background-color #fff
  padding 0 12px
  position absolute
  left 50%
  bottom 0
  transform translate(-50%, 50%)
  trs2()

.main-prices-item__button
  padding 2px 15px
  font-size 18px
  border 2px solid navColorGreen
  border-radius 7px
  background-color #fff
  // box-shadow 0 0 11px -2px grey
  trs2()
.main-prices-item__button-wrapper:hover
  padding 0 7px
  .main-prices-item__button
    // background-color navColorGreen
    // color #fff
    font-size 19px
    padding-top 3px
    padding-bottom 3px
    padding 3px 17px
    border-radius 8px
    box-shadow 0 -3px 11px -3px #808080
  // /Ячейки с ценами

  // Адаптация
@media screen and (max-width 375px)
  .why-us__item-article-header-h1
    font-size 2em

  // /Адаптация

